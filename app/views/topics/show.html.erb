<p id="notice"><%= notice %></p>
<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="col topic">
      <div class="topic-text">
        <p class="left"><strong>タイトル</strong></p>
        <p class="left"><%= @topic.title %></p>
        <p class="left"><strong>内容</strong></p>
        <p class="left"><%= @topic.content %></p>
        <p class="right">
          <strong>作成時間:</strong>
          <%= @topic.created_at.strftime("%y/%m/%d %p %l:%M") %>
          <strong>作成者:</strong>
          <%= @topic.user.name %>さん
          <% if @topic.user.id == current_user.id %>
            <%= link_to "編集", edit_topic_path(@topic.id), class: 'btn btn-default btn-sm btn-success' %>
            <%= link_to "削除", topic_path(@topic.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
          <% end %>
        </p>
      </div>
      <p>コメント一覧</p>
      <div id="comments_area">
        <%= render partial: 'comments/index', locals: { comments: @comments, topic: @topic } %>
      </div>
      <%= render partial: 'comments/form', locals: { comment: @comment, topic: @topic } %>
      <%= link_to '戻る', topics_path %>
    </div>
  </div>
</div>
