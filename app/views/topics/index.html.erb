<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <%= link_to "作成する", new_topic_path, class: 'btn btn-default' %>
    <% @topics.each do |topic| %>
      <div class="row">
      <div class="topic">
        <div class="row">
        <div class="contributor">
          <div class="col-xs-7">
            <%= profile_img(topic.user) if profile_img(topic.user)%>
            <%= topic.user.name %>
          </div>
          <div class="col-xs-3 col-xs-offset-2">
            <% if topic.user.id == current_user.id %>
              <%= link_to "編集", edit_topic_path(topic.id), class: 'btn btn-default btn-sm btn-success' %>
              <%= link_to "削除", topic_path(topic.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
            <% end %>
          </div>
        </div>
        </div>
        <div class="content">
          <%= link_to topic_path(topic) do %>
            「<%= topic.title %>」
          <% end %>
          <p><%= topic.content %></p>

        </div>
        <div class="row">
          <div class="col-xs-7">
            <%= topic.comments.count %>件のコメント
          </div>
          <div class="col-xs-3 col-xs-offset-2">
            <%= link_to "詳細", topic_path(topic.id), class: 'btn btn-default btn-sm'%>
          </div>
        </div>


        <!-- <p>コメント一覧</p>
        <div id="comments_area">
          <%= render partial: 'comments/index', locals: { comments: topic.comments, topic: topic } %>
        </div>
        <%= render partial: 'comments/form', locals: { comment: topic.comments.build, topic: topic } %> -->
      </div>
      </div>
    <% end %>
  </div>
</div>
