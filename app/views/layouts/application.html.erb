<!DOCTYPE html>
<html>
<head>
  <title>Kaohon</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

    <header>
      <ul>
        <% if user_signed_in? %>
          <div class="col">
            <li class="log_in_logo"><%= link_to "Kaohon", topics_path %></li>
          </div>
          <div class="col">
            <li><%= link_to 'ともだち', user_path(current_user.id) %></li>
            <li><%= link_to "メッセージ", conversations_path %></li>
            <li><%= link_to '設定', edit_user_registration_path %></li>
            <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
          </div>
        <% else %>
          <p class="before_log_in">Kaohon</p>
        <% end %>
      </ul>
    </header>

    <div class="frame">
        <%= yield %>
    </div>

    <% unless user_signed_in? %>
      <footer>
        <p>Ruby on Rails練習用</p>
      </footer>
    <% end %>

</body>
</html>
