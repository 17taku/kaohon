<div class="row">
  <h2><%= @user.name %>さんのフォロワー一覧</h2>
  <% @user.followers.each do |user| %>
    <div class="container-child col-md-2 col-sm-4 col-xs-6">
      <%= profile_img(user) %>
      <p><%= user.name %>さん</p>
      <%= render 'follow_form', user: user %>
    </div>
  <% end %>
</div>
<div class="row">
  <h2><%= @user.name %>さんがフォローしている人一覧</h2>
  <% @user.followed_users.each do |user| %>
    <div class="container-child col-md-2 col-sm-4 col-xs-6">
      <%= profile_img(user) %>
      <p><%= user.name %>さん</p>
      <%= render 'follow_form', user: user %>
    </div>
  <% end %>
</div>
